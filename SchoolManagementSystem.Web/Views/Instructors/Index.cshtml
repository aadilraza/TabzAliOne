@model IEnumerable<SchoolManagementSystem.Web.Models.Person.PersonViewModel>

@{
    ViewBag.Title = "Index";
}

@section Menu {
    @Scripts.Render("~/Scripts/Tables/Data/menu")
}

@Styles.Render("~/AdminLTE/plugins/datatables/css")
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Instructors</h3>
    </div>
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped table-responsive">
            <thead>
                <tr>
                    <th width="50">Status</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Phone)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span>@Html.ActionLink(" ", item.IsActive ? "Deactivate" : "Activate", "Instructors", new { id = item.Id }, new { @class = item.IsActive?"label label-success":"label label-danger", @title = item.IsActive ? "Deactivate" : "Activate" })</span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.ActionLink(" ", "Edit", "Instructors", new { id = item.Id }, new { @class = "btn btn-primary btn-sm glyphicon glyphicon-edit", @title="Edit"})
                            @Html.ActionLink(" ", "Details", "Instructors", new { id = item.Id }, new { @class = "btn btn-success btn-sm glyphicon glyphicon-info-sign", @title = "Details" })
                            @Html.ActionLink(" ", "Delete", "Instructors", new { id = item.Id }, new { @class = "btn btn-danger btn-sm glyphicon glyphicon-remove", @title = "Delete" })
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th width="50">Status</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Phone)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/datatables/js")
    @Scripts.Render("~/Scripts/Tables/Data")
}
